{
  "manifest_version": 3,
  "name": "Papierkram Dark Mode",
  "version": "1.0.0",
  "description": "Smart dark mode for papierkram.de. Toggle on/off with one click. Not affiliated with Papierkram.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Papierkram Dark Mode"
  },
  "content_scripts": [
    {
      "matches": ["*://*.papierkram.de/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ]
}
